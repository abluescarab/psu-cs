<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CallFragment">

    <ViewFlipper
        android:id="@+id/call_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_call_list" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/call_flipper_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/empty_call_list"
                android:textSize="@dimen/empty_list_font_size" />
        </RelativeLayout>

    </ViewFlipper>

</androidx.constraintlayout.widget.ConstraintLayout>
