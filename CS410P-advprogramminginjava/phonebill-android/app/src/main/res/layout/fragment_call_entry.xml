<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCallEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <TextView
        android:id="@+id/entry_caller_title"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/entry_caller" />

    <TextView
        android:id="@+id/entry_caller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:text="@string/placeholder_caller" />

    <TextView
        android:id="@+id/entry_callee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/entry_callee" />

    <TextView
        android:id="@+id/entry_callee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:text="@string/placeholder_callee" />

    <TextView
        android:id="@+id/entry_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/entry_start" />

    <TextView
        android:id="@+id/entry_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:text="@string/placeholder_start" />

    <TextView
        android:id="@+id/entry_end_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/entry_end" />

    <TextView
        android:id="@+id/entry_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:text="@string/placeholder_end" />

    <TextView
        android:id="@+id/entry_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/entry_duration" />

    <TextView
        android:id="@+id/entry_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="3"
        android:text="@string/placeholder_duration" />

</GridLayout>
